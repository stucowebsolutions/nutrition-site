<form class="max-w-3xl mx-auto mt-8 bg-white p-6 rounded-lg shadow" action="https://formspree.io/f/your_form_id" method="POST">
  <h3 class="text-xl font-semibold mb-4">Send a message</h3>

  <label class="block mb-3">
    <span class="text-sm text-gray-700">Name</span>
    <input type="text" name="name" required class="mt-1 block w-full rounded border-gray-300 p-2"/>
  </label>

  <label class="block mb-3">
    <span class="text-sm text-gray-700">Email</span>
    <input type="email" name="email" required class="mt-1 block w-full rounded border-gray-300 p-2"/>
  </label>

  <label class="block mb-3">
    <span class="text-sm text-gray-700">Message</span>
    <textarea name="message" rows="5" required class="mt-1 block w-full rounded border-gray-300 p-2"></textarea>
  </label>

  <div class="text-right">
    <button type="submit" class="px-4 py-2 rounded bg-emerald-600 text-white">Send</button>
  </div>
</form>
