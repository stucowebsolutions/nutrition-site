---
import Layout from '../components/Layout.astro';
---
<Layout>
  <section class="max-w-5xl mx-auto px-4 py-12">
    <h1 class="text-3xl font-semibold mb-6">Services</h1>

    <div class="grid md:grid-cols-2 gap-6">
      <article class="bg-white p-6 rounded-lg shadow">
        <h3 class="font-semibold mb-2">Initial Consultation</h3>
        <p class="text-gray-700">60 minutes. Assessment, goal setting, and plan.</p>
        <p class="mt-3 text-sm text-gray-500">Price: [placeholder]</p>
      </article>

      <article class="bg-white p-6 rounded-lg shadow">
        <h3 class="font-semibold mb-2">Follow-up Session</h3>
        <p class="text-gray-700">30 minutes. Progress review and adjustments.</p>
        <p class="mt-3 text-sm text-gray-500">Price: [placeholder]</p>
      </article>
    </div>
  </section>
</Layout>
